<div class="ou-grid">
    <div value="" class="head_name">
  </div>
  <h1 class="heading">Organizational Units</h1>
    <div class="search-options">
    <div class="search-wrapper">
      <img src="../asset/search.png" alt="user" class="search_icon" />
      <input type="text" id="search" name="search" placeholder="Search by ou..." value='' />
    </div>
  </div>

  <div class="sort-options">
    <label for="sort">Sort by:</label>
    <select id="sort" name="sort">
      <option value="asc-desc">Ascending - Descending</option>
      <option value="desc-asc">Descending - Ascending</option>
      <option value="new-old">New - Old</option>
      <option value="old-new">Old - New</option>
    </select>
  </div>
  <p class="total-count">Total: <b>1</b></p>
  <div class="tiles">
    {{#each this.ous as |ou|}}
      <div class="tile">
        <a href="#" {{on "click" (fn this.showOUDetails ou.id)}}><img src="../asset/ou.png" alt="Home" class="ou_icon o_icon" /><br>{{ou.name}}</a>
      </div>
    {{else}}
      <h3 class="not_found">No OU's found</h3>
      <img src="../asset/empty.png" alt="Home" class="empty" />
    {{/each}}
  </div>
  {{#if this.selectedOU}}
    <div class="popup">
      <div class="popup-content">
        <button class="close-button" type="button" {{on "click" this.closePopup}}>X</button>
        <p>
          <strong>OU Name:</strong>
          {{#if this.selectedOU.name}}
            <i>{{this.selectedOU.name}}</i>
          {{else}}
            <i>No OU Name found</i>
          {{/if}}
        </p>
        <p>
          <strong>Description:</strong>
          {{#if this.selectedOU.description}}
            <i>{{this.selectedOU.description}}</i>
          {{else}}
            <i>No Description found</i>
          {{/if}}
        </p>
      </div>
    </div>
  {{/if}}
</div>
